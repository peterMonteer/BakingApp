<RelativeLayout android:id="@+id/widget_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <TextView android:id="@+id/no_recipe_warning_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please add a recipe within the app"
        android:layout_centerInParent="true"/>

    <ListView android:id="@+id/widget_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ollllllla"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

</RelativeLayout>